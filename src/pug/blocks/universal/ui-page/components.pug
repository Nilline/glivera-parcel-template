ul.ui_components
	include ../../../templates/mixins/m-hero
	include ../../../templates/mixins/m-chat-with-us
	include ../../../templates/mixins/m-text-block
	include ../../../templates/mixins/m-image
	include ../../../templates/mixins/m-hero-v2

	+component({
		title: 'Component name (include)',
	})

		//- include ../../your_component

	+component({
		title: 'Component name (hero)',
	})

		+hero({
			mod: 'hero--color_white_mod hero--1_mod',
			img: 'hero/hero.jpg',
			img_mob: 'hero/hero_mob.jpg',
			social: ['instagram', 'twitter', 'linkedin'],
			content: [
				'<h1>Experience a new standard of living</h1>',
				'<p>For over two decades, the founders of Hapi Homes have been offering, accessory dwelling units (ADUs), tiny, modular and pre-fabricated homes,  using the highest quality materials to clients globally.</p>',
			],
			btn: 'Learn more',
			btn_mod: 'btn_primary',
		})

	+component({
		title: 'Component name (hero hero--2_mod)',
	})

		+hero({
			mod: 'hero--2_mod',
			img: 'hero/hero-about.jpg',
			img_mob: 'hero/hero-about-mobile.jpg',
		})

	+component({
		title: 'Component name (hero hero--3_mod)',
	})

		+hero({
			mod: 'hero--3_mod',
			content: [
				'<h1>Live sustainably & in harmony </h1>',
				"<p>Our eco-friendly homes are designed to maximize natural light, reduce energy consumption, and minimize waste. Join the movement towards sustainable living with Hapi Homes. We've teamed up with One Tree Planted, for every home sold we plant the equivalent amount of trees need to offset the carbon footprint generated by Hapi Homes build.</p>",
			],
		})

	+component({
		title: 'Component name (chat_with_us)',
	})

		+chat_with_us({
			content: [
				'<h2>Chat with us</h2>',
				'<p>Getting started with a Hapi Home couldn’t be any easier. Our range in price and aesthetic, we don’t compromise on quality or design, and our clients love the fact that our homes are ready to ship in less than six weeks.</p>',
				'<p>With concierge-level service from the blueprint to delivery, you have a dedicated Hapi Home expert with you for every part of the process.</p>',
			],
			btn_title: 'Book a call',
			btn_mod: 'btn_primary',
			icon: 'calendar',
		})

	+component({
		title: 'Component name (text-block)',
	})

		+text-block({
			mod: 'text_block--offset_1_mod',
			title: 'We rethink the future of living',
			content_left: [
				"<p>At Hapi Homes our mission was always to build. Not a portfolio of properties, but a reputation for creating exceptional homes across the globe.</p>",
				"<p>Whilst every project is unique, the philosophy behind each is unwavering: we strive to craft environments that are both intrinsically beautiful and faultlessly functional.</p>",
			],
			content_rigth: [
				"<p>This ethos spans all aspects of design and extends beyond to encompass every facet of a property’s story, wherever you are in the world.</p>",
				"<p>From helping you to find the perfect site until the day you turn the key in the door. We’re all about rethinking the future of living. We believe that this is possible by utilizing offsite construction and the way of building efficiently and sustainably.</p>",
			],
		})

	+component({
		title: 'Component name (image)',
	})

		+image({
			img: `image-section/about.jpg`,
			img_mob: `image-section/about-mob.jpg`,
		})

	+component({
		title: 'Component name include (create-your-dream)',
	})

		include ../../../blocks/create-your-dream

	+component({
		title: 'Component name include (live-sustainably)',
	})

		include ../../../blocks/live-sustainably

	+component({
		title: 'Component name include (partners-section)',
	})

		include ../../../blocks/partners-section

	+component({
		title: 'Component name include (sustainability-block)',
	})

		include ../../../blocks/sustainability-block

	+component({
		title: 'Component name include (content-section)',
	})

		include ../../../blocks/content-section

	+component({
		title: 'Component name include (chat-with-renofi)',
	})

		include ../../../blocks/chat-with-renofi

	+component({
		title: 'Component name include (case-section)',
	})

		include ../../../blocks/case-section

	+component({
		title: 'Component name (hero-v2)',
	})

		+hero_v2({
			img: 'hero_v2/hero_v2_newsroom.jpg',
			img_mob: 'hero_v2/hero_v2_newsroom_mob.jpg',
			title: 'Newsroom',
			subtitle: "We’re building hundreds of homes every month, so as you can imagine we’re moving quickly. Check back for regular updates or reach out to Greg McGunagle with any questions or requests: <a href='#'>gmcgunagle@transmitterpr.com</a>",
		})

	+component({
		title: 'Component name (hero-v2 "mod 1")',
	})

		+hero_v2({
			mod: 'hero_v2--mod_1',
			img: 'hero_v2/hero_v2_contact_us.jpg',
			img_mob: 'hero_v2/hero_v2_contact_us_mob.jpg',
			title: 'Get in touch',
			subtitle: "We can handle any job, whatever the size. Tell us what you're looking for and we'll get back to you as soon as possible and we'll get back to you in no time.",
		})

	+component({
		title: 'Component name include (news-list)',
	})

		include ../../../blocks/news-list

	+component({
		title: 'Component name include (bio-block)',
	})

		include ../../../blocks/bio-block

	+component({
		title: 'Component name include (team)',
	})

		include ../../../blocks/team
